<%- include ("../partials/head") %>

<body>
    
      <!-- HEADER ADMIN CONTAINER START-->
  
  <%- include("../partials/header-admin") %>

  <!-- END HEADER ADMIN CONTAINER -->


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" >
  <% if(emailSent.length> 0 ) {%>
    <div class="alert alert-success">
      <%= emailSent %>
    </div>

    <% } %>

  <!-- contact section -->
  <section class="book_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>
          Contact Us
        </h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form_container">
            <form method = "POST" action = "/casual/contactUs">
              <div>
                <input type="text" class="form-control name" placeholder="Your Name" name = "name" value = "<%= qs.name %>" required/>
              </div>
              <div>
                <input type="email" class="form-control email" placeholder="Your Email" name = "mail" value = "<%= qs.mail %>" required/>
              </div>
              <div>
                <input type="text" class="form-control subject" placeholder="The subject" name = "subject" value = "<%= qs.subject %>" required/>
              </div>
              
              <div>
                <textarea class="form-control msg" placeholder="Enter your message ..." name = "msg" value = "<%= qs.message %>" required></textarea>
              </div>

              <div class="btn_box">
                <input type = "submit" value = "Send" class = "send_btn" title = "Send a message">
                  <!-- Send
                </button> -->
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-6">
          <div class="map_container ">
            <!-- <div id = "googlemap"> -->
            <div>
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5086378.755298589!2d-3.932394333580628!3d51.50251247273599!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xfdabf9ecd3f1a0c9!2sUniversit%C3%A9%20de%20Bretagne%20Occidentale%20-%20UBO!5e0!3m2!1sfr!2sse!4v1648479559943!5m2!1sfr!2sse" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- end contact section -->

  <!-- footer section -->

  <%- include ('../partials/footer.ejs') -%>

  <!-- footer section -->

  <style>

      a, a:visited{
          text-decoration: none;
      }
    .send_btn{
      outline: none; 
      width : 120px; 
      height : 40px; 
      color:white; 
      background-color: black; 
      border-radius: 5px; 
      cursor: pointer;

    }

    .send_btn:hover{
      background:white;
      color:black;

      transition: all 1s;
      border-radius: 0px;

    }

  </style>

  
<script>
    $(function () {
      setTimeout(function () {
        $('.alert').slideUp(500);
      }, 3000);
    });

  </script>
  
  <!-- jQery -->
  <script src="js/jquery-3.4.1.min.js"></script>
  <!-- popper js -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
  </script>
  <!-- bootstrap js -->
  <script src="js/bootstrap.js"></script>
  <!-- owl slider -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
  </script>
  <!-- isotope js -->
  <script src="https://unpkg.com/isotope-layout@3.0.4/dist/isotope.pkgd.min.js"></script>
  <!-- nice select -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js"></script>
  <!-- custom js -->
  <script src="js/custom.js"></script>
  <!-- Google Map -->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap">
  </script>
  <!-- End Google Map -->


</body>

</html>