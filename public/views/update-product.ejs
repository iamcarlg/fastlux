
<%- include ("../partials/head") %>

<body>
    
      <!-- HEADER ADMIN CONTAINER START-->
  
  <%- include("../partials/header-admin") %>

  <!-- END HEADER ADMIN CONTAINER -->

  <div class = "admin-space">

    <center>

      <div class ="updateProduct">
          
        <form action = "/admin/updateproduct/<%=product._id %>?_method=PATCH" method = "POST" enctype="multipart/form-data">
            <center><h1 style="font-family:Arial, Helvetica, sans-serif;">Update a Product</h1></center>
            <div class="mb-3 mt-3">
            <input type="text" class="form-control" id="name" name = "name" placeholder="Name" value="<%= product.name %>" required>
            </div>

            <div class="form-group mb-3">

              <label for="category" style ="font-weight: bold;">Select category:</label>
              <select class="form-control" id="category" name = "category" value="<%= product.category %>" required>
              <option selected value = "">Select a category</option>
                <option>Pizza</option>
                <option>Burger</option>
                <option>Pasta</option>
                <option>Fries</option>
              </select>

          </div>

            <div class="mb-3">
                <input type="text" class="form-control" id="smallPrice" name = "smallPrice" placeholder="Small Variant Price" value="<%= product.smallPrice %>" required>
            </div>

            <div class="mb-3">
              <input type="text" class="form-control" id="mediumPrice" name = "mediumPrice" placeholder="Medium Variant Price" value="<%= product.mediumPrice %>" required>
          </div>

          <div class="mb-3">
            <input type="text" class="form-control" id="bigPrice" name = "bigPrice" placeholder="Big Variant Price" value="<%= product.bigPrice %>" required>
        </div>


            <div class="mb-3">
              <input type="file" class="form-control" id="picture" name = "picture" placeholder="Description" value="<%= product.picture %>" required>
          </div>

            <div class="mb-3">
                <input type="text" style = " height:100px" class="form-control" id="description" name = "description" placeholder="Description" value="<%= product.description %>" required>
            </div>
     
            <button type="submit" class="btn btn-dark">Update product</button>
      </form>
     
      </div>
    </center>


 </div>

  <style>

      .updateProduct{
          width : 50%;
          margin: 15px auto;          

      }

      .updateProduct textarea{
          height : 100px;
      }

  </style>
